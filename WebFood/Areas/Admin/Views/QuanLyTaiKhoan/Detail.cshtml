
@model  PagedList.IPagedList<Model.Framework.User>
@using PagedList.Mvc


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<div class="card">
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Name</th>
                        <th>UserName</th>
                        <th>Mobile</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Postcode</th>
                        <th>Avatar</th>
                        <th>CreateDate</th>
                        @*<th>ChucNang</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.UserId">
                            <th scope="row">@item.UserId</th>
                            <td>@item.Name</td>
                            <td>@item.UserName</td>
                            <td>@item.Mobile</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td>@item.PostCode</td>
                            <td>@item.ImageUrl</td>
                            <td>@item.CreatedDate</td>
                        </tr>
                    }
                </tbody>
            </table>
            @*@Html.PageListPage(Model, page => Url.Action("Index", new { page}))*@
        </div>
    </div>
</div>

<div style="
    margin-left: 20px;
">
    @Html.ActionLink("Back to List", "Index")
</div>
